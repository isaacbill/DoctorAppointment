<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Appointment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_back"
            android:padding="1dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book an Appointment"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_90"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_regular"
        android:gravity="center"
        android:text="MediCo"
        android:textColor="@color/red"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:orientation="vertical"
        android:padding="5dp">

        <AutoCompleteTextView
            android:id="@+id/areas"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:background="@color/grey_90"
            android:backgroundTint="@color/grey_300"
            android:drawableTint="@color/grey_700"
            android:drawableLeft="@drawable/ic_baseline_eco"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Select Area"
            android:fontFamily="@font/poppinsmedium"
            android:textColorHint="@color/grey_90"
            android:drawableRight="@drawable/ic_baseline_my_location"
            android:paddingRight="10dp">


        </AutoCompleteTextView>

        <AutoCompleteTextView
            android:id="@+id/doctors"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey_90"
            android:backgroundTint="@color/grey_300"
            android:drawableTint="@color/grey_700"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Search doctor ect..."
            android:fontFamily="@font/poppinsmedium"
            android:textColorHint="@color/grey_90"
            android:paddingRight="10dp">

        </AutoCompleteTextView>


        <EditText
            android:id="@+id/date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey_90"
            android:backgroundTint="@color/grey_300"
            android:drawableTint="@color/grey_700"
            android:drawableLeft="@drawable/ic_date_range"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="Select Date"
            android:inputType="date"
            android:fontFamily="@font/poppinsmedium"
            android:textColorHint="@color/grey_90"
            android:paddingRight="10dp"/>
        <EditText
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:background="@color/grey_90"
            android:backgroundTint="@color/grey_300"
            android:drawableTint="@color/grey_700"
            android:drawableLeft="@drawable/ic_time"
            android:drawablePadding="16dp"
            android:paddingLeft="10dp"
            android:hint="00:00"
            android:inputType="time"
            android:focusable="false"
            android:fontFamily="@font/poppinsmedium"
            android:textColorHint="@color/grey_90"
            android:paddingRight="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/purple"
            android:backgroundTint="@color/colorPrimaryDark"
            android:layout_marginTop="10dp"
            android:text="Book Appointment"
            android:textAllCaps="false"
            android:fontFamily="@font/poppinsmedium"
            android:textSize="18sp"
            android:textColor="@color/white"/>

    </LinearLayout>
    </LinearLayout>